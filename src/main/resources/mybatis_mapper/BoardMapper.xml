<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mentoring_project.mapper.BoardMapper">

    <!--insert mapper-->
    <insert id="save">
        insert into board(boardNo, id, hit, content, title, writer)
        values(#{boardNo}, #{id}, #{hit}, #{content}, #{title}, #{writer})
    </insert>

    <!-- 이미지 -->
    <insert id="register">
        insert into board_image(uuid, file_name, ord, boardNo)
        values(#{uuid}, #{file_name}, #{ord}, #{boardNo})
    </insert>


    <!--update mapper-->
    <update id="modify">
        update board  set title = #{title}, content = #{content}
        where boardNo = #{boardNo}
    </update>
    <!-- delete mapper-->
    <delete id="delete">
        delete  from board where boardNo
    </delete>

    <delete id="deleteOne">
        delete from board where boardNo = #{boardNo};
    </delete>


    <select id="selectOne">
        select *  from  board  where boardNo = #{boardNo};
    </select>

    <select id="selectList" resultType="com.example.mentoring_project.domain.BoardVO">
        select * from board
        <include refid="search" />
        order by boardNo DESC limit #{skip}, #{size}
    </select>


    <!--검색어-->
    <select id="list">
        select * from board
        <if test="types != null and types.length > 0">
            where board.boardNo like '%' || #{boardNo} || '%'
        </if>
    </select>

    <sql id="search">
        <where>
            <if test="types != null and types.length > 0">
                <foreach collection="types" item="type" open="(" close=")" separator=" OR">
                    <if test="type == 't'.toString()">
                        title like concat('%', #{keyword}, '%')
                    </if>
                    <if test="type == 'w'.toString()">
                        name like concat('%', #{keyword}, '%')
                    </if>
                    <if test="type == 'c'.toString()">
                        content like concat('%', #{keyword}, '%')
                    </if>
                </foreach>
            </if>
        </where>
    </sql>

    <!--게시물 갯수-->
    <select id="getCount" resultType="int">
        select count(*) from board
        <include refid="search" />
    </select>



</mapper>
